<Window x:Class="RobocopyGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Robocopy GUI ツール" 
        Height="700" 
        Width="900"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- コピー元/コピー先フォルダ -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- オプション -->
            <RowDefinition Height="Auto"/>
            <!-- ファイル一覧 -->
            <RowDefinition Height="*"/>
            <!-- 進捗 -->
            <RowDefinition Height="Auto"/>
            <!-- ボタン -->
            <RowDefinition Height="Auto"/>
            <!-- CUIコマンド出力 -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- コピー元フォルダ選択 -->
        <Grid Grid.Row="0" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="コピー元フォルダ:"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsNotRunning}"/>
            <Button Grid.Column="2" 
                    Content="参照..." 
                    Command="{Binding BrowseSourceCommand}"
                    IsEnabled="{Binding IsNotRunning}"/>
        </Grid>

        <!-- コピー先フォルダ選択 -->
        <Grid Grid.Row="1" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="コピー先フォルダ:"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding DestinationPath, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsNotRunning}"/>
            <Button Grid.Column="2" 
                    Content="参照..." 
                    Command="{Binding BrowseDestinationCommand}"
                    IsEnabled="{Binding IsNotRunning}"/>
        </Grid>

        <!-- コピーオプション -->
        <GroupBox Grid.Row="2" Header="コピーオプション" Margin="0,10">
            <ItemsControl ItemsSource="{Binding CopyOptions}" Margin="5">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding DisplayName}" 
                                  IsChecked="{Binding IsSelected}"
                                  IsEnabled="{Binding DataContext.IsNotRunning, RelativeSource={RelativeSource AncestorType=Window}}"
                                  Margin="10,5"
                                  ToolTip="{Binding Description}"
                                  Width="180"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>

        <!-- ファイル一覧 -->
        <GroupBox Grid.Row="3" Header="コピー対象ファイル一覧" Margin="0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 総量表示 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="ファイル数: "/>
                    <TextBlock Text="{Binding TotalFileCount}" FontWeight="Bold"/>
                    <TextBlock Text=" 件" Margin="0,0,20,0"/>
                    <TextBlock Text="合計サイズ: "/>
                    <TextBlock Text="{Binding TotalFileSizeDisplay}" FontWeight="Bold"/>
                </StackPanel>
                
                <!-- ファイル一覧DataGrid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding FileList}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="理由" Binding="{Binding CopyReason}" Width="60"/>
                        <DataGridTextColumn Header="ファイル名" Binding="{Binding FileName}" Width="200"/>
                        <DataGridTextColumn Header="相対パス" Binding="{Binding RelativePath}" Width="*"/>
                        <DataGridTextColumn Header="サイズ" Binding="{Binding FileSizeDisplay}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- 進捗表示 -->
        <Grid Grid.Row="4" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="状態: "/>
                <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold"/>
            </StackPanel>
            <ProgressBar Grid.Row="1" 
                         Height="25" 
                         Minimum="0" 
                         Maximum="100" 
                         Value="{Binding ProgressPercentage}"/>
        </Grid>

        <!-- ボタン -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="確認" 
                    Command="{Binding ConfirmCommand}"
                    Visibility="{Binding ConfirmButtonVisibility}"
                    MinWidth="100"/>
            <Button Content="実行" 
                    Command="{Binding ExecuteCommand}"
                    Visibility="{Binding ExecuteButtonVisibility}"
                    MinWidth="100"/>
            <Button Content="中止" 
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding CancelButtonVisibility}"
                    Background="#FFDD4444"
                    Foreground="White"
                    MinWidth="100"/>
        </StackPanel>

        <!-- CUIコマンド出力欄 -->
        <GroupBox Grid.Row="6" Header="CUIコマンド" Margin="0,10,0,0">
            <TextBox Text="{Binding GeneratedCommand, Mode=OneWay}" 
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Height="60"
                     VerticalScrollBarVisibility="Auto"
                     Background="#FFF5F5F5"
                     FontFamily="Consolas"
                     Margin="5"/>
        </GroupBox>
    </Grid>
</Window>
